<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout21"
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:layout_alignParentBottom="true"
    android:elevation="6dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/contactBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rsz_paytm"
        android:paddingRight="0dp"
        android:elevation="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="76dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYTM"
        android:id="@+id/textView"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/contactBtn"
        android:layout_toRightOf="@+id/contactBtn"
        android:layout_toEndOf="@+id/contactBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLAT 5% CASHBACK ON RECHARGES &amp; BILL PAYMENTS OF RS. 20"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/contactBtn"
        android:layout_toEndOf="@+id/contactBtn" />


</RelativeLayout>

